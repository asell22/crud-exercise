<%= notice %>
<table>
  <thead>
    <tr>
      <th>
        Name
      </th>
      <th>
        Description
      </th>
      <th>
        Price
      </th>
      <th>
        Created At
      </th>
      <th>
        Updated At
      </th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= link_to product.name, product_path(product) %>
        <td>
          <%= product.description %>
        </td>
        <td>
          <%= product.price %>
        </td>
        <td>
          <%= product.created_at %>
        </td>
        <td>
          <%= product.updated_at %>
        </td>


        <td>
          <%= link_to "Edit", edit_product_path(product) %>
        </td>
        <td>
          <%= link_to "Delete", product_path(product), method: :delete, data: {confirm: "Are you sure?"} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>




